<%- include('../../partials/header.ejs') %>
<%- include('../../partials/adminnavbar') %>

<div class="container">
    <button class="btn btn-info" type="submit" style="margin-top: 5px;"><a href="/viewreceipt" style="text-decoration: none; color: black;">Manage Receipts</a></button>
    <div class="row">
      <div class="col-md-12">
        <div class="add_bt">
          <p><i class="bi bi-plus-circle"></i> Add Receipt</p>
          <form method="post" action="/add/receipt" id="staform">
            <div id="form_cont">
              <label>Client Name</label>
              <input
                type="text"
                name="clientname"
                placeholder="Client Name"
                required
              />
            </div>
            <br />
            <div>
              <label>Client Contact</label>
              <input
                type="tel"
                name="clientcontact"
                placeholder="Client Contact"
                required
              />
            </div>
            <br />
            <div>
              <label>Invoice Number</label>
              <input
                type="number"
                name="invoicenumber"
                placeholder="invoice number"
                required
              />
            </div>
            <br />
            <div>
              <label>Value Date</label>
              <input type="date" name="valuedate" required />
            </div>
            <br />
            <table>
              <tr>
                <th>Total Items Purchased</th>
                <th>Total Items Names</th>
                <th>Total Quantities</th>
                <th>Total Amount Paid</th>
              </tr>
              <tr>
                <td>
                  <input
                    type="number"
                    name="totalitems"
                    placeholder="Total Items"
                    required
                  />
                </td>
                <td>
                  <input
                    type="text"
                    name="allitemsname"
                    placeholder="Names"
                    required
                  />
                </td>
                <td>
                  <input
                    type="number"
                    name="totalquantities"
                    placeholder="Total Quantities"
                    required
                  />
                </td>
                <td>
                  <input
                    type="number"
                    name="totalamount"
                    placeholder="Total Amount"
                    required
                  />
                </td>
                <td></td>
              </tr>
            </table>
            <button
              type="submit"
              class="updatebtn"
            >
              Add
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

<%- include('../../partials/footer') %>