<body>
    <div class="container">
        <button class="btn btn-info" type="submit" style="margin-top: 5px;"><a href="/viewlocations" style="text-decoration: none; color: black;">Manage Locations</a></button>
        <div class="row">
            <div class="col-md-12">
                <div class="add_bt">
                    <p><i class="bi bi-plus-circle"></i> Add Location</p>
                    <form method="post" action="/api/location" id="staform">
                        <div>
                        <label>Location</label>
                        <input type="text" name="location" placeholder="location">
                        </div>
                        <br>
                        <div>
                        <label for="status">Status</label>
                            <select name="status" id="status" form="staform">
                                <option value="#"selected="true" disabled="disabled"><p>---SET LOCATION STATUS ---</p></option>
                                <option value="Available">Available</option>
                                <option value="Not Available">Not Available</option>
                            </select>
                        </div>
                        <button type="submit" class="updatebtn"> Add</button>
                    </form>
                   
                </div>
            </div>
        </div>
    </div>
</body>
