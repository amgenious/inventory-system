<%- include('../../partials/header.ejs') %>
<%- include('../../partials/adminnavbar') %>

<h1 style="text-align: center;">Number of User Available</h1>

<table class="table table-primary table-striped-columns">
    <thead>
        <tr>
            <th>User Name</th>
            <th>User Password</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% if (Users.length > 0){ %> <% Users.forEach(User => { %>
        <tr>
            <td><%= User.username %></td>
            <td><%= User.password %></td>
            <td><a href="/edituser/<%- User._id %>" style="margin-right:5px; color:green;"><i class="bi bi-pen"></i></a>
            <a href="/deleteuser/<%- User._id %>" style="color: red;"><i class="bi bi-trash"></i></a>
            </td>
        </tr>
        <% }) %> <% } else{ %>
            <p>There are no Users to be displayed</p>
          <% } %>
    </tbody>
</table>
<%- include('../../partials/footer') %>