<%- include('../../partials/header.ejs') %>
<%- include('../../partials/adminnavbar') %>

<div class="container">
    <button class="btn btn-info" type="submit" style="margin-top: 5px; margin-bottom: 5px;"><a href="/categories" style="text-decoration: none; color: black;">Add Catergory</a></button>
    <div class="row">
        <div class="col-md-12">
            <div class="add_bt">
                <p><i class="bi bi-pen"></i> Manage Categories</p>
                <table class="table table-primary table-striped-columns">
                    <thead>
                      <tr>
                        <th scope="col">Category</th>
                        <th scope="col">Status</th>
                        <th scope="col">Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if (Categories.length > 0){ %> <% Categories.forEach(Category => { %>
                      <tr>
                        <td><%= Category.category %></td>
                        <td><%= Category.status %></td>
                        <td><a href="/editcategory/<%- Category._id %>" style="margin-right:5px; color:green;"><i class="bi bi-pen"></i></a>
                            <a href="/deletecategory/<%- Category._id %>" style="color: red;"><i class="bi bi-trash"></i></a>
                        </td>
                      </tr>
                      <% }) %> <% } else{ %>
                        <p>There are no Catergories to be displayed</p>
                      <% } %>
                    </tbody>
                  </table>
            </div>
        </div>
    </div>
</div>

<%- include('../../partials/footer') %>